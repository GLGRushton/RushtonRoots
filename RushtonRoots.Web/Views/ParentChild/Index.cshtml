@model IEnumerable<RushtonRoots.Domain.UI.Models.ParentChildViewModel>
@using System.Text.Json
@{
    ViewData["Title"] = "Parent-Child Relationships";
    
    // Helper function to get relationship type display
    string GetRelationshipTypeDisplay(string? type)
    {
        return type?.ToLower() switch
        {
            "biological" => "Biological",
            "adopted" => "Adopted",
            "step" => "Step",
            "guardian" => "Guardian",
            "foster" => "Foster",
            _ => "Unknown"
        };
    }
    
    // Helper function to get relationship type icon
    string GetRelationshipTypeIcon(string? type)
    {
        return type?.ToLower() switch
        {
            "biological" => "bloodtype",
            "adopted" => "volunteer_activism",
            "step" => "family_restroom",
            "guardian" => "shield",
            "foster" => "home",
            _ => "help_outline"
        };
    }
    
    // Helper function to get relationship type color
    string GetRelationshipTypeColor(string? type)
    {
        return type?.ToLower() switch
        {
            "biological" => "primary",
            "adopted" => "accent",
            "step" => "accent",
            "guardian" => "accent",
            "foster" => "accent",
            _ => "warn"
        };
    }
    
    // Transform server-side data to match Angular component interface (ParentChildCard)
    var relationships = Model.Select(r => new 
    {
        id = r.Id,
        parentPersonId = r.ParentPersonId,
        childPersonId = r.ChildPersonId,
        parentName = r.ParentName,
        childName = r.ChildName,
        parentPhotoUrl = r.ParentPhotoUrl,
        childPhotoUrl = r.ChildPhotoUrl,
        relationshipType = r.RelationshipType?.ToLower() ?? "unknown",
        relationshipTypeDisplay = GetRelationshipTypeDisplay(r.RelationshipType),
        relationshipTypeIcon = GetRelationshipTypeIcon(r.RelationshipType),
        relationshipTypeColor = GetRelationshipTypeColor(r.RelationshipType),
        childBirthDate = r.ChildBirthDate?.ToString("o"), // ISO 8601 format
        childAge = r.ChildAge,
        isVerified = r.IsVerified,
        createdDateTime = r.CreatedDateTime.ToString("o"),
        updatedDateTime = r.UpdatedDateTime.ToString("o")
    }).ToList();
    
    var relationshipsJson = JsonSerializer.Serialize(relationships);
    
    // Note: JsonSerializer.Serialize handles proper encoding and escaping
    // Html.Raw() is safe here because the data comes from our database and is properly serialized
    
    // User permissions
    var canEdit = User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin");
    var canDelete = User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin");
    var canCreate = User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin");
}

<!-- Angular ParentChild Index Component -->
<app-parent-child-index 
    relationships='@Html.Raw(relationshipsJson)'
    can-create="@canCreate.ToString().ToLower()"
    can-edit="@canEdit.ToString().ToLower()"
    can-delete="@canDelete.ToString().ToLower()">
</app-parent-child-index>

<script>
    // Event handlers for Angular component actions
    document.addEventListener('DOMContentLoaded', function() {
        const component = document.querySelector('app-parent-child-index');
        if (component) {
            // Helper function to safely construct URLs
            const buildUrl = function(action, id) {
                return '@Url.Action("__ACTION__", "ParentChild")'.replace('__ACTION__', action) + '/' + encodeURIComponent(id);
            };
            
            // Handle relationship actions (view, edit, delete, verify)
            component.addEventListener('action', function(event) {
                const action = event.detail.action;
                const id = event.detail.parentChildId;
                
                if (action === 'view') {
                    window.location.href = buildUrl('Details', id);
                } else if (action === 'edit') {
                    window.location.href = buildUrl('Edit', id);
                } else if (action === 'delete') {
                    if (confirm('Are you sure you want to delete this relationship?')) {
                        window.location.href = buildUrl('Delete', id);
                    }
                } else if (action === 'verify') {
                    // TODO: Implement verification endpoint
                    console.log('Verify relationship:', id);
                }
            });
            
            // Handle create action
            component.addEventListener('create', function() {
                window.location.href = '@Url.Action("Create", "ParentChild")';
            });
        }
    });
</script>

<!-- Fallback content for browsers without JavaScript -->
<noscript>
    <div class="container mt-4">
        <div class="alert alert-warning">
            <strong>JavaScript Required:</strong> This page requires JavaScript to display parent-child relationship information. Please enable JavaScript in your browser.
        </div>
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Parent-Child Relationships</h2>
            @if (User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Relationship
                </a>
            }
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Parent</th>
                        <th>Child</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var relationship in Model)
                    {
                        <tr>
                            <td>@relationship.ParentName</td>
                            <td>@relationship.ChildName</td>
                            <td>@relationship.RelationshipType</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@relationship.Id" class="btn btn-sm btn-info">Details</a>
                                @if (User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@relationship.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@relationship.Id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No parent-child relationships found.
            </div>
        }
    </div>
</noscript>
