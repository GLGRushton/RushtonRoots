@{
    ViewData["Title"] = "System Settings";
}

<div class="admin-settings-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>@ViewData["Title"]</h1>
            <p class="page-subtitle">Configure system-wide settings and preferences</p>
        </div>
        <div class="page-actions">
            <a href="/Admin/Dashboard" class="btn btn-secondary">
                <i class="material-icons">dashboard</i>
                Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Settings Content -->
    <div class="settings-container">
        <!-- General Settings Section -->
        <section class="settings-section">
            <h2>
                <i class="material-icons">settings</i>
                General Settings
            </h2>
            <div class="settings-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Site Name</strong>
                        <p class="setting-description">The name of your family tree site</p>
                    </div>
                    <div class="setting-control">
                        <input type="text" class="form-control" value="RushtonRoots" placeholder="Enter site name">
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Site Description</strong>
                        <p class="setting-description">Brief description of your family tree site</p>
                    </div>
                    <div class="setting-control">
                        <textarea class="form-control" rows="3" placeholder="Enter site description">Our family genealogy and history</textarea>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Time Zone</strong>
                        <p class="setting-description">Default time zone for events and dates</p>
                    </div>
                    <div class="setting-control">
                        <select class="form-control">
                            <option>UTC</option>
                            <option selected>America/New_York</option>
                            <option>America/Chicago</option>
                            <option>America/Denver</option>
                            <option>America/Los_Angeles</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>

        <!-- User Management Settings -->
        <section class="settings-section">
            <h2>
                <i class="material-icons">people</i>
                User Management
            </h2>
            <div class="settings-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Allow User Registration</strong>
                        <p class="setting-description">Allow new users to register for accounts</p>
                    </div>
                    <div class="setting-control">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Require Email Verification</strong>
                        <p class="setting-description">Users must verify email before accessing the site</p>
                    </div>
                    <div class="setting-control">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Default User Role</strong>
                        <p class="setting-description">Role assigned to new users by default</p>
                    </div>
                    <div class="setting-control">
                        <select class="form-control">
                            <option selected>Viewer</option>
                            <option>Contributor</option>
                            <option>Editor</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>

        <!-- Privacy & Security Settings -->
        <section class="settings-section">
            <h2>
                <i class="material-icons">security</i>
                Privacy & Security
            </h2>
            <div class="settings-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Default Privacy Level</strong>
                        <p class="setting-description">Default privacy setting for new content</p>
                    </div>
                    <div class="setting-control">
                        <select class="form-control">
                            <option>Public</option>
                            <option selected>Family Only</option>
                            <option>Private</option>
                        </select>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Enable Two-Factor Authentication</strong>
                        <p class="setting-description">Require 2FA for admin accounts</p>
                    </div>
                    <div class="setting-control">
                        <label class="switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Session Timeout</strong>
                        <p class="setting-description">Automatic logout after inactivity (minutes)</p>
                    </div>
                    <div class="setting-control">
                        <input type="number" class="form-control" value="60" min="15" max="1440">
                    </div>
                </div>
            </div>
        </section>

        <!-- Media Settings -->
        <section class="settings-section">
            <h2>
                <i class="material-icons">photo_library</i>
                Media Settings
            </h2>
            <div class="settings-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Maximum Upload Size</strong>
                        <p class="setting-description">Maximum file size for uploads (MB)</p>
                    </div>
                    <div class="setting-control">
                        <input type="number" class="form-control" value="10" min="1" max="100">
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Allowed File Types</strong>
                        <p class="setting-description">File extensions allowed for upload</p>
                    </div>
                    <div class="setting-control">
                        <input type="text" class="form-control" value=".jpg,.jpeg,.png,.gif,.pdf">
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Auto-Generate Thumbnails</strong>
                        <p class="setting-description">Automatically create thumbnails for images</p>
                    </div>
                    <div class="setting-control">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <!-- Email Settings -->
        <section class="settings-section">
            <h2>
                <i class="material-icons">email</i>
                Email Settings
            </h2>
            <div class="settings-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <strong>SMTP Server</strong>
                        <p class="setting-description">Email server for sending notifications</p>
                    </div>
                    <div class="setting-control">
                        <input type="text" class="form-control" placeholder="smtp.example.com">
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>From Email Address</strong>
                        <p class="setting-description">Email address used as sender</p>
                    </div>
                    <div class="setting-control">
                        <input type="email" class="form-control" placeholder="noreply@example.com">
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-label">
                        <strong>Enable Email Notifications</strong>
                        <p class="setting-description">Send email notifications to users</p>
                    </div>
                    <div class="setting-control">
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <!-- Save Button -->
        <div class="settings-actions">
            <button type="button" class="btn btn-primary btn-lg">
                <i class="material-icons">save</i>
                Save Settings
            </button>
            <button type="button" class="btn btn-secondary btn-lg">
                <i class="material-icons">refresh</i>
                Reset to Defaults
            </button>
        </div>
    </div>
</div>

