@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-dashboard-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>@ViewData["Title"]</h1>
            <p class="page-subtitle">System overview and administration</p>
        </div>
        <div class="page-actions">
            <a href="/Admin/Settings" class="btn btn-primary">
                <i class="material-icons">settings</i>
                System Settings
            </a>
        </div>
    </div>

    <!-- Admin Dashboard Content -->
    <div class="dashboard-container">
        <!-- System Statistics Section -->
        <section class="dashboard-section">
            <h2>System Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="material-icons">people</i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Total Users</div>
                        <div class="stat-value">@(ViewData["TotalUsers"] ?? 0)</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="material-icons">home</i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Total Households</div>
                        <div class="stat-value">@(ViewData["TotalHouseholds"] ?? 0)</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="material-icons">person</i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Total Persons</div>
                        <div class="stat-value">@(ViewData["TotalPersons"] ?? 0)</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="material-icons">photo_library</i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Media Items</div>
                        <div class="stat-value">@(ViewData["MediaItems"] ?? 0)</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- User Management Section -->
        <section class="dashboard-section">
            <h2>User Management</h2>
            <div class="action-grid">
                <a href="#" class="action-card">
                    <i class="material-icons">manage_accounts</i>
                    <span>Manage Users</span>
                </a>
                <a href="#" class="action-card">
                    <i class="material-icons">admin_panel_settings</i>
                    <span>Manage Roles</span>
                </a>
                <a href="#" class="action-card">
                    <i class="material-icons">history</i>
                    <span>Activity Logs</span>
                </a>
            </div>
        </section>

        <!-- System Management Section -->
        <section class="dashboard-section">
            <h2>System Management</h2>
            <div class="action-grid">
                <a href="/Admin/Settings" class="action-card">
                    <i class="material-icons">settings</i>
                    <span>System Settings</span>
                </a>
                <a href="#" class="action-card">
                    <i class="material-icons">backup</i>
                    <span>Backup & Restore</span>
                </a>
                <a href="#" class="action-card">
                    <i class="material-icons">build</i>
                    <span>Maintenance</span>
                </a>
            </div>
        </section>

        <!-- Recent Activity Section -->
        <section class="dashboard-section">
            <h2>Recent Activity</h2>
            <div class="activity-list">
                @{
                    var recentActivity = ViewData["RecentActivity"] as List<RushtonRoots.Domain.UI.Models.RecentActivity>;
                    if (recentActivity != null && recentActivity.Any())
                    {
                        <div class="activity-items">
                            @foreach (var activity in recentActivity)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon">
                                        <i class="material-icons">
                                            @switch (activity.ActivityType)
                                            {
                                                case "PersonAdded":
                                                    @:person_add
                                                    break;
                                                case "StoryPublished":
                                                    @:article
                                                    break;
                                                case "PhotoAdded":
                                                    @:photo
                                                    break;
                                                default:
                                                    @:notifications
                                                    break;
                                            }
                                        </i>
                                    </div>
                                    <div class="activity-details">
                                        <div class="activity-description">@activity.Description</div>
                                        <div class="activity-meta">
                                            <span class="activity-user">@activity.UserName</span>
                                            <span class="activity-time">@activity.CreatedDateTime.ToString("MMM dd, yyyy hh:mm tt")</span>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(activity.ActionUrl))
                                    {
                                        <div class="activity-action">
                                            <a href="@activity.ActionUrl" class="activity-link">
                                                <i class="material-icons">arrow_forward</i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="info-message">
                            <i class="material-icons">info</i>
                            No recent activity to display.
                        </p>
                    }
                }
            </div>
        </section>
    </div>
</div>

