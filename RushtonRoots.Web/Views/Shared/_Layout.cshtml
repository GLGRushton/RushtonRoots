<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rushton Roots</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom, #e8f5e9, #f1f8e9);
            min-height: 100vh;
        }
        
        header {
            background: linear-gradient(135deg, #2e7d32 0%, #388e3c 50%, #43a047 100%);
            color: white;
            padding: 20px 40px;
            box-shadow: 0 4px 12px rgba(46, 125, 50, 0.3);
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        
        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .site-title {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .site-title a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: opacity 0.3s ease;
        }

        .site-title a:hover {
            opacity: 0.9;
        }

        .site-title .leaf-icon {
            font-size: 32px;
        }

        .user-details {
            display: flex;
            align-items: center;
            gap: 15px;
            background: rgba(255, 255, 255, 0.15);
            padding: 10px 20px;
            border-radius: 25px;
            backdrop-filter: blur(10px);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: #2e7d32;
        }

        .user-info {
            color: white;
        }

        .user-name {
            font-weight: 600;
            font-size: 16px;
            margin: 0;
        }

        .user-role {
            font-size: 12px;
            opacity: 0.9;
            margin: 0;
        }
        
        main {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        footer {
            background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 50%, #388e3c 100%);
            color: white;
            text-align: center;
            padding: 30px 20px;
            margin-top: 60px;
            box-shadow: 0 -4px 12px rgba(46, 125, 50, 0.2);
        }

        footer p {
            margin: 10px 0;
            opacity: 0.95;
        }

        footer .footer-links {
            margin-top: 15px;
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        footer .footer-links a {
            color: #a5d6a7;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer .footer-links a:hover {
            color: white;
        }

        @@media (max-width: 768px) {
            header {
                padding: 15px 20px;
            }

            .header-container {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .site-title {
                font-size: 24px;
            }

            .user-details {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <h1 class="site-title">
                <a href="/">
                    <span class="leaf-icon">ðŸŒ³</span>
                    <span>Rushton Roots</span>
                </a>
            </h1>
            <div class="user-details">
                <div class="user-avatar">ðŸ‘¤</div>
                <div class="user-info">
                    <p class="user-name">Guest User</p>
                    <p class="user-role">Family Member</p>
                </div>
            </div>
        </div>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    
    <footer>
        <p>&copy; @DateTime.Now.Year - Rushton Roots - Preserving Family Heritage</p>
        <div class="footer-links">
            <a href="/">Home</a>
            <a href="#">About</a>
            <a href="#">Contact</a>
            <a href="#">Privacy</a>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
