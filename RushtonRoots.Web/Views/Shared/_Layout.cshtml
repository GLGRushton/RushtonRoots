<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rushton Roots</title>
    <link rel="stylesheet" href="~/dist/styles.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom, #e8f5e9, #f1f8e9);
            min-height: 100vh;
        }
        
        main {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        footer {
            background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 50%, #388e3c 100%);
            color: white;
            text-align: center;
            padding: 30px 20px;
            margin-top: 60px;
            box-shadow: 0 -4px 12px rgba(46, 125, 50, 0.2);
        }

        footer p {
            margin: 10px 0;
            opacity: 0.95;
        }

        footer .footer-links {
            margin-top: 15px;
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        footer .footer-links a {
            color: #a5d6a7;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer .footer-links a:hover {
            color: white;
        }
    </style>
</head>
<body>
    @* Angular Header Component - Phase 2.1 *@
    <app-header
        userinfo='@Html.Raw(Json.Serialize(new {
            name = User.Identity?.Name ?? "",
            role = User.IsInRole("Admin") ? "System Admin" : User.IsInRole("HouseholdAdmin") ? "Household Admin" : "Family Member",
            isAuthenticated = User.Identity?.IsAuthenticated ?? false,
            isAdmin = User.IsInRole("Admin"),
            isHouseholdAdmin = User.IsInRole("HouseholdAdmin")
        }))'
        showsearch="true"
        shownotifications="true">
    </app-header>

    @* Hidden logout form for server-side authentication *@
    <form asp-controller="Account" asp-action="Logout" method="post" style="display: none;" id="logoutForm">
    </form>
    
    <main role="main">
        @RenderBody()
    </main>
    
    <footer>
        <p>&copy; @DateTime.Now.Year - Rushton Roots - Preserving Family Heritage</p>
        <div class="footer-links">
            <a href="/">Home</a>
            <a href="#">About</a>
            <a href="#">Contact</a>
            <a href="#">Privacy</a>
        </div>
    </footer>
    
    @* Angular Elements Scripts *@
    <script src="~/dist/runtime.js"></script>
    <script src="~/dist/polyfills.js"></script>
    <script src="~/dist/main.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
