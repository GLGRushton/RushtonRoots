@model RushtonRoots.Domain.UI.Models.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <style>
        /* Ensure Angular Element displays properly */
        app-login {
            display: block;
            width: 100%;
        }
    </style>
}

<!-- Angular Login Component -->
<app-login 
    return-url="@ViewData["ReturnUrl"]"
    error-message="@ViewData["ErrorMessage"]">
</app-login>

<!-- Fallback content (shown if Angular component fails to load) -->
<noscript>
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</noscript>

@section Scripts {
    <script>
        // Handle form submission from Angular component
        document.addEventListener('DOMContentLoaded', function() {
            const loginElement = document.querySelector('app-login');
            
            if (loginElement) {
                // Listen for the loginSubmit event from the Angular component
                loginElement.addEventListener('loginSubmit', function(event) {
                    const formData = event.detail;
                    
                    // Create a form and submit it to the server
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Account/Login?returnUrl=' + encodeURIComponent('@ViewData["ReturnUrl"]' || '/');
                    
                    // Add anti-forgery token
                    const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (antiForgeryToken) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = antiForgeryToken.value;
                        form.appendChild(tokenInput);
                    }
                    
                    // Add form fields
                    for (const [key, value] of Object.entries(formData)) {
                        if (value !== null && value !== undefined) {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key.charAt(0).toUpperCase() + key.slice(1); // Capitalize first letter for C# model binding
                            input.value = value;
                            form.appendChild(input);
                        }
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                });
            }
        });
    </script>
    @Html.AntiForgeryToken()
}
