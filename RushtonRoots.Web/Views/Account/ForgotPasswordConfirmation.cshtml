@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <h2>@ViewData["Title"]</h2>
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Check your email</h4>
            <p>If an account with that email address exists, we have sent you an email with instructions to reset your password.</p>
            <hr>
            <p class="mb-0">Please check your email and follow the instructions.</p>
        </div>
        <p>
            <a asp-action="Login" class="btn btn-primary">Return to Login</a>
        </p>
    </div>
</div>
