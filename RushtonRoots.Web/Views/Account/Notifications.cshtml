@{
    ViewData["Title"] = "Notifications";
}

<div class="notifications-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>@ViewData["Title"]</h1>
            <p class="page-subtitle">View and manage your notifications</p>
        </div>
    </div>

    <!-- Angular Notification Panel Component -->
    <app-notification-panel
        api-endpoint="/api/notification"
        data-group-notifications="true"
        data-max-visible="50">
    </app-notification-panel>
</div>

<!-- Fallback content for browsers without JavaScript -->
<noscript>
    <div class="noscript-fallback">
        <div class="notifications-container">
            <section class="info-section">
                <h2>Notifications</h2>
                <p>
                    The notifications panel requires JavaScript to be enabled. 
                    Please enable JavaScript in your browser to view and manage your notifications.
                </p>
                <div class="feature-list">
                    <h3>Notification Features:</h3>
                    <ul>
                        <li>View all your notifications in one place</li>
                        <li>Mark notifications as read/unread</li>
                        <li>Filter notifications by type</li>
                        <li>Delete notifications you no longer need</li>
                        <li>Manage notification preferences</li>
                        <li>Receive real-time updates</li>
                    </ul>
                </div>
                <div class="actions">
                    <a href="/Account/Settings" class="btn btn-primary">Go to Settings</a>
                    <a href="/" class="btn btn-secondary">Go to Home</a>
                </div>
            </section>
        </div>
    </div>

    <style>
        .noscript-fallback {
            padding: 20px;
        }

        .notifications-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .info-section {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 12px rgba(33, 150, 243, 0.15);
            border-left: 6px solid #2196f3;
        }

        .info-section h2 {
            color: #1976d2;
            margin: 0 0 20px 0;
            font-size: 2em;
            font-weight: 700;
        }

        .info-section p {
            color: #555;
            line-height: 1.8;
            font-size: 1.05em;
            margin-bottom: 20px;
        }

        .feature-list {
            margin: 30px 0;
        }

        .feature-list h3 {
            color: #1976d2;
            margin-bottom: 15px;
            font-size: 1.3em;
        }

        .feature-list ul {
            list-style-type: none;
            padding-left: 0;
        }

        .feature-list li {
            padding: 8px 0 8px 30px;
            position: relative;
            color: #666;
        }

        .feature-list li:before {
            content: "âœ“";
            position: absolute;
            left: 0;
            color: #2196f3;
            font-weight: bold;
            font-size: 1.2em;
        }

        .actions {
            margin-top: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 500;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #2196f3;
            color: white;
        }

        .btn-primary:hover {
            background-color: #1976d2;
        }

        .btn-secondary {
            background-color: #666;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #555;
        }

        @@media (max-width: 768px) {
            .info-section {
                padding: 25px;
            }

            .info-section h2 {
                font-size: 1.5em;
            }

            .actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</noscript>

<style>
    .notifications-page {
        padding: 20px;
    }

    .page-header {
        margin-bottom: 30px;
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header h1 {
        color: #1976d2;
        margin: 0;
        font-size: 2.5em;
        font-weight: 700;
    }

    .page-subtitle {
        color: #666;
        margin: 5px 0 0 0;
        font-size: 1.1em;
    }

    /* Responsive styles for mobile devices */
    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 2em;
        }

        .notifications-page {
            padding: 15px;
        }
    }
</style>
