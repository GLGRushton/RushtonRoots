@model RushtonRoots.Domain.UI.Requests.CreateUserRequest
@{
    ViewData["Title"] = "Create New User";
}

@section Styles {
    <style>
        /* Ensure Angular Element displays properly */
        app-create-user {
            display: block;
            width: 100%;
        }
    </style>
}

<!-- Angular Element for Create User Component -->
<app-create-user
    success-message="@TempData["SuccessMessage"]"
    error-message="@ViewData["ErrorMessage"]">
</app-create-user>

@section Scripts {
    <script>
        // Handle form submission from Angular component
        document.addEventListener('DOMContentLoaded', function() {
            const createUserElement = document.querySelector('app-create-user');
            
            if (createUserElement) {
                // Listen for the userCreateSubmit event from the Angular component
                createUserElement.addEventListener('userCreateSubmit', function(event) {
                    const formData = event.detail;
                    
                    // Create a form and submit it to the server
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Account/CreateUser';
                    
                    // Add anti-forgery token
                    const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (antiForgeryToken) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = antiForgeryToken.value;
                        form.appendChild(tokenInput);
                    }
                    
                    // Add form fields
                    for (const [key, value] of Object.entries(formData)) {
                        if (value !== null && value !== undefined && key !== 'confirmPassword' && key !== 'sendInvitationEmail') {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key.charAt(0).toUpperCase() + key.slice(1); // Capitalize first letter for C# model binding
                            input.value = value;
                            form.appendChild(input);
                        }
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                });
            }
        });
    </script>
    @Html.AntiForgeryToken()
}

