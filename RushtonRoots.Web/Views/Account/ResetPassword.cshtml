@model RushtonRoots.Domain.UI.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <style>
        /* Ensure Angular Element displays properly */
        app-reset-password {
            display: block;
            width: 100%;
        }
    </style>
}

<!-- Angular Reset Password Component -->
<app-reset-password 
    code="@Model?.Code"
    email="@Model?.Email">
</app-reset-password>

<!-- Fallback content (shown if Angular component fails to load) -->
<noscript>
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input asp-for="Code" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</noscript>

@section Scripts {
    <script>
        // Handle form submission from Angular component
        document.addEventListener('DOMContentLoaded', function() {
            const resetPasswordElement = document.querySelector('app-reset-password');
            
            if (resetPasswordElement) {
                // Listen for the resetPasswordSubmit event from the Angular component
                resetPasswordElement.addEventListener('resetPasswordSubmit', function(event) {
                    const formData = event.detail;
                    
                    // Create a form and submit it to the server
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Account/ResetPassword';
                    
                    // Add anti-forgery token
                    const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (antiForgeryToken) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = antiForgeryToken.value;
                        form.appendChild(tokenInput);
                    }
                    
                    // Add form fields (including the code from the reset link)
                    for (const [key, value] of Object.entries(formData)) {
                        if (value !== null && value !== undefined && key !== 'confirmPassword') {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key.charAt(0).toUpperCase() + key.slice(1); // Capitalize first letter for C# model binding
                            input.value = value;
                            form.appendChild(input);
                        }
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                });
            }
        });
    </script>
    @Html.AntiForgeryToken()
}
