@model IEnumerable<RushtonRoots.Domain.UI.Models.HouseholdViewModel>
@{
    ViewData["Title"] = "Households";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Households</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Household
            </a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Household Name</th>
                    <th>Anchor Person</th>
                    <th>Members</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var household in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@household.Id">@household.HouseholdName</a>
                        </td>
                        <td>@household.AnchorPersonName</td>
                        <td>
                            <a asp-action="Members" asp-route-id="@household.Id">
                                @household.MemberCount @(household.MemberCount == 1 ? "member" : "members")
                            </a>
                        </td>
                        <td>@household.CreatedDateTime.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@household.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Members" asp-route-id="@household.Id" class="btn btn-sm btn-success">Members</a>
                            @if (User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))
                            {
                                <a asp-action="Edit" asp-route-id="@household.Id" class="btn btn-sm btn-warning">Edit</a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@household.Id" class="btn btn-sm btn-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No households found.
        </div>
    }
</div>
