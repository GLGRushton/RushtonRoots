@model IEnumerable<RushtonRoots.Domain.UI.Models.HouseholdViewModel>
@using System.Text.Json
@{
    ViewData["Title"] = "Households";
    
    // Transform server-side data to match Angular component interface
    var householdsJson = JsonSerializer.Serialize(Model.Select(h => new 
    {
        id = h.Id,
        householdName = h.HouseholdName,
        anchorPersonId = h.AnchorPersonId,
        anchorPersonName = h.AnchorPersonName,
        memberCount = h.MemberCount,
        createdDateTime = h.CreatedDateTime.ToString("o"), // ISO 8601 format
        updatedDateTime = h.UpdatedDateTime.ToString("o")
    }));
    
    // User permissions
    var canEdit = User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin");
    var canDelete = User.IsInRole("Admin");
    var canCreate = User.IsInRole("Admin");
}

<!-- Angular Household Index Component -->
<app-household-index 
    initial-households='@Html.Raw(householdsJson)'
    can-edit="@canEdit.ToString().ToLower()"
    can-delete="@canDelete.ToString().ToLower()"
    can-create="@canCreate.ToString().ToLower()">
</app-household-index>

<script>
    // Parse and pass data to Angular component
    document.addEventListener('DOMContentLoaded', function() {
        const component = document.querySelector('app-household-index');
        if (component) {
            const householdsData = @Html.Raw(householdsJson);
            
            // Set properties on the custom element
            component.setAttribute('initial-households', JSON.stringify(householdsData));
            component.setAttribute('can-edit', '@canEdit.ToString().ToLower()');
            component.setAttribute('can-delete', '@canDelete.ToString().ToLower()');
            component.setAttribute('can-create', '@canCreate.ToString().ToLower()');
        }
    });
</script>

<!-- Fallback content for browsers without JavaScript -->
<noscript>
    <div class="container mt-4">
        <div class="alert alert-warning">
            <strong>JavaScript Required:</strong> This page requires JavaScript to display household information. Please enable JavaScript in your browser.
        </div>
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Households</h2>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Household
                </a>
            }
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Household Name</th>
                        <th>Anchor Person</th>
                        <th>Members</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var household in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@household.Id">@household.HouseholdName</a>
                            </td>
                            <td>@household.AnchorPersonName</td>
                            <td>
                                <a asp-action="Members" asp-route-id="@household.Id">
                                    @household.MemberCount @(household.MemberCount == 1 ? "member" : "members")
                                </a>
                            </td>
                            <td>@household.CreatedDateTime.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@household.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Members" asp-route-id="@household.Id" class="btn btn-sm btn-success">Members</a>
                                @if (User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@household.Id" class="btn btn-sm btn-warning">Edit</a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@household.Id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No households found.
            </div>
        }
    </div>
</noscript>
