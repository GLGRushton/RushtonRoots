@model RushtonRoots.Domain.UI.Models.PersonViewModel
@{
    ViewData["Title"] = "Person Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Person Details</h2>
        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Household</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Household" asp-action="Details" asp-route-id="@Model.HouseholdId">@Model.HouseholdName</a>
                        </dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsDeceased)
                            {
                                <span class="badge bg-secondary">Deceased</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Living</span>
                            }
                        </dd>

                        @if (Model.IsDeceased)
                        {
                            <dt class="col-sm-4">Date of Death</dt>
                            <dd class="col-sm-8">@(Model.DateOfDeath?.ToString("MMMM dd, yyyy") ?? "N/A")</dd>
                        }

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedDateTime.ToString("MMMM dd, yyyy hh:mm tt")</dd>

                        <dt class="col-sm-4">Last Updated</dt>
                        <dd class="col-sm-8">@Model.UpdatedDateTime.ToString("MMMM dd, yyyy hh:mm tt")</dd>
                    </dl>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                    {
                        <img src="@Model.PhotoUrl" alt="@Model.FullName" class="img-fluid rounded" style="max-height: 300px;">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                            <i class="bi bi-person-circle" style="font-size: 100px; color: #ccc;"></i>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Relationships Section -->
    <div class="card mt-4">
        <div class="card-header">
            <h4>Relationships</h4>
        </div>
        <div class="card-body">
            <!-- Partnerships -->
            <div class="mb-4">
                <h5>Partnerships</h5>
                @if (Model.Partnerships.Any())
                {
                    <ul class="list-group">
                        @foreach (var partnership in Model.Partnerships)
                        {
                            var partnerName = partnership.PersonAId == Model.Id ? partnership.PersonBName : partnership.PersonAName;
                            <li class="list-group-item">
                                <strong>@partnerName</strong> - @partnership.PartnershipType
                                @if (partnership.StartDate.HasValue)
                                {
                                    <span> (From: @partnership.StartDate.Value.ToString("MM/dd/yyyy"))</span>
                                }
                                <a asp-controller="Partnership" asp-action="Details" asp-route-id="@partnership.Id" class="btn btn-sm btn-info float-end">Details</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No partnerships recorded.</p>
                }
            </div>

            <!-- Parents -->
            <div class="mb-4">
                <h5>Parents</h5>
                @if (Model.ParentRelationships.Any())
                {
                    <ul class="list-group">
                        @foreach (var relationship in Model.ParentRelationships)
                        {
                            <li class="list-group-item">
                                <strong>@relationship.ParentName</strong> - @relationship.RelationshipType
                                <a asp-controller="ParentChild" asp-action="Details" asp-route-id="@relationship.Id" class="btn btn-sm btn-info float-end">Details</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No parents recorded.</p>
                }
            </div>

            <!-- Children -->
            <div class="mb-4">
                <h5>Children</h5>
                @if (Model.ChildRelationships.Any())
                {
                    <ul class="list-group">
                        @foreach (var relationship in Model.ChildRelationships)
                        {
                            <li class="list-group-item">
                                <strong>@relationship.ChildName</strong> - @relationship.RelationshipType
                                <a asp-controller="ParentChild" asp-action="Details" asp-route-id="@relationship.Id" class="btn btn-sm btn-info float-end">Details</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No children recorded.</p>
                }
            </div>
        </div>
    </div>
</div>
