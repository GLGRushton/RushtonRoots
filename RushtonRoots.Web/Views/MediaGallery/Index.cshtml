@{
    ViewData["Title"] = "Media Gallery";
    var mediaType = ViewData["MediaType"]?.ToString();
    var page = (int)(ViewData["Page"] ?? 1);
    var pageSize = (int)(ViewData["PageSize"] ?? 24);
}

<div class="media-gallery-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
        <p class="page-subtitle">Browse and manage family photos and videos</p>
        <div class="page-actions">
            <a href="/MediaGallery/Upload" class="btn btn-primary">
                <i class="material-icons">cloud_upload</i>
                Upload Media
            </a>
        </div>
    </div>

    <!-- Angular Media Gallery Component -->
    <app-media-gallery
        api-endpoint="/api/media"
        media-type="@(mediaType ?? "")"
        data-page="@(page)"
        data-page-size="@(pageSize)"
        can-edit="@(User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))"
        can-delete="@(User.IsInRole("Admin") || User.IsInRole("HouseholdAdmin"))"
        user-id="@User.Identity?.Name">
    </app-media-gallery>
</div>

<!-- Fallback content for browsers without JavaScript -->
<noscript>
    <div class="noscript-fallback">
        <div class="media-gallery-container">
            <section class="info-section">
                <h2>Media Gallery</h2>
                <p>
                    The media gallery requires JavaScript to be enabled. 
                    Please enable JavaScript in your browser to view and manage your family photos and videos.
                </p>
                <div class="feature-list">
                    <h3>Gallery Features:</h3>
                    <ul>
                        <li>View photos and videos in a responsive grid layout</li>
                        <li>Filter by media type (photos or videos)</li>
                        <li>Search media by title, description, or tags</li>
                        <li>Upload new photos and videos</li>
                        <li>Organize media into albums</li>
                        <li>Tag people in photos</li>
                        <li>Download media files</li>
                    </ul>
                </div>
                <div class="actions">
                    <a href="/MediaGallery/Upload" class="btn btn-primary">Upload Media</a>
                    <a href="/" class="btn btn-secondary">Go to Home</a>
                </div>
            </section>
        </div>
    </div>

    <style>
        .noscript-fallback {
            padding: 20px;
        }

        .media-gallery-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .info-section {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 12px rgba(76, 175, 80, 0.15);
            border-left: 6px solid #4caf50;
        }

        .info-section h2 {
            color: #2e7d32;
            margin: 0 0 20px 0;
            font-size: 2em;
            font-weight: 700;
        }

        .info-section p {
            color: #555;
            line-height: 1.8;
            font-size: 1.05em;
            margin-bottom: 20px;
        }

        .feature-list {
            margin: 30px 0;
        }

        .feature-list h3 {
            color: #2e7d32;
            margin-bottom: 15px;
            font-size: 1.3em;
        }

        .feature-list ul {
            list-style-type: none;
            padding-left: 0;
        }

        .feature-list li {
            padding: 8px 0 8px 30px;
            position: relative;
            color: #666;
        }

        .feature-list li:before {
            content: "âœ“";
            position: absolute;
            left: 0;
            color: #4caf50;
            font-weight: bold;
            font-size: 1.2em;
        }

        .actions {
            margin-top: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 500;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #4caf50;
            color: white;
        }

        .btn-primary:hover {
            background-color: #45a049;
        }

        .btn-secondary {
            background-color: #666;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #555;
        }

        @@media (max-width: 768px) {
            .info-section {
                padding: 25px;
            }

            .info-section h2 {
                font-size: 1.5em;
            }

            .actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</noscript>

<style>
    .media-gallery-page {
        padding: 20px;
    }

    .page-header {
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .page-header h1 {
        color: #2e7d32;
        margin: 0;
        font-size: 2.5em;
        font-weight: 700;
    }

    .page-subtitle {
        color: #666;
        margin: 5px 0 0 0;
        font-size: 1.1em;
    }

    .page-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #4caf50;
        color: white;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .material-icons {
        font-size: 20px;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .page-header h1 {
