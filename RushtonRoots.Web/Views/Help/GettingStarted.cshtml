        background-color: #1976d2;
        color: white;
    }

    .btn-primary:hover {
        background-color: #1565c0;
    }

    .btn-secondary {
        background-color: #666;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #555;
    }

    .material-icons {
        font-size: 20px;
    }

