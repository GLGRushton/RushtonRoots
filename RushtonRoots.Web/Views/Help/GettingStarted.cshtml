    @@media (max-width: 768px) {
        .page-header {
            padding: 25px;
        }

        .header-content h1 {
            font-size: 2em;
        }

        .content-section {
            padding: 20px;
        }

        .feature-grid {
            grid-template-columns: 1fr;
        }

        .next-steps-grid {
            grid-template-columns: 1fr;
        }

        .help-navigation {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }

    /* Print styles */
    @@media print {
        .help-page {
            padding: 0;
            background: white;
        }

        .help-navigation {
            display: none;
        }
    }
</style>
