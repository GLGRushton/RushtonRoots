@{
    ViewData["Title"] = "Family Calendar";
    var viewMode = ViewData["ViewMode"]?.ToString() ?? "dayGridMonth";
    var initialDate = ViewData["InitialDate"]?.ToString() ?? DateTime.Now.ToString("yyyy-MM-dd");
    var canEdit = (bool)(ViewData["CanEdit"] ?? false);
}

<div class="calendar-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>@ViewData["Title"]</h1>
            <p class="page-subtitle">Manage family events, birthdays, and anniversaries</p>
        </div>
        <div class="page-actions">
            @if (canEdit)
            {
                <a href="/Calendar/Create" class="btn btn-primary">
                    <i class="material-icons">event</i>
                    Create Event
                </a>
            }
        </div>
    </div>

    <!-- Angular Calendar Component -->
    <app-calendar
        initial-view="@viewMode"
        initial-date="@initialDate"
        can-edit="@canEdit"
        api-endpoint="/api/FamilyEvent"
        rsvp-endpoint="/api/EventRsvp"
        user-id="@User.Identity?.Name">
    </app-calendar>
</div>

<!-- Fallback content for browsers without JavaScript -->
<noscript>
    <div class="noscript-fallback">
        <div class="calendar-container">
            <section class="info-section">
                <h2>Family Calendar</h2>
                <p>
                    The interactive calendar requires JavaScript to be enabled. 
                    Please enable JavaScript in your browser to view and manage family events.
                </p>
                <div class="feature-list">
                    <h3>Calendar Features:</h3>
                    <ul>
                        <li>View family events in month, week, day, and list views</li>
                        <li>Display birthdays and anniversaries automatically</li>
                        <li>Create and manage family events</li>
                        <li>RSVP to events and track attendance</li>
                        <li>Set up recurring events for regular gatherings</li>
                        <li>Receive reminders for upcoming events</li>
                        <li>Filter events by category and RSVP status</li>
                        <li>Export events to iCal format</li>
                    </ul>
                </div>
                <div class="actions">
                    @if (canEdit)
                    {
                        <a href="/Calendar/Create" class="btn btn-primary">Create Event</a>
                    }
                    <a href="/" class="btn btn-secondary">Go to Home</a>
                </div>
            </section>
        </div>
    </div>

    <style>
        .noscript-fallback {
            padding: 20px;
        }

        .calendar-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .info-section {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 12px rgba(76, 175, 80, 0.15);
            border-left: 6px solid #4caf50;
        }

        .info-section h2 {
            color: #2e7d32;
            margin: 0 0 20px 0;
            font-size: 2em;
            font-weight: 700;
        }

        .info-section p {
            color: #555;
            line-height: 1.8;
            font-size: 1.05em;
            margin-bottom: 20px;
        }

        .feature-list {
            margin: 30px 0;
        }

        .feature-list h3 {
            color: #2e7d32;
            margin-bottom: 15px;
            font-size: 1.3em;
        }

        .feature-list ul {
            list-style-type: none;
            padding-left: 0;
        }

        .feature-list li {
            padding: 8px 0 8px 30px;
            position: relative;
            color: #666;
        }

        .feature-list li:before {
            content: "âœ“";
            position: absolute;
            left: 0;
            color: #4caf50;
            font-weight: bold;
            font-size: 1.2em;
        }

        .actions {
            margin-top: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 500;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #4caf50;
            color: white;
        }

        .btn-primary:hover {
            background-color: #45a049;
        }

        .btn-secondary {
            background-color: #666;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #555;
        }

        @@media (max-width: 768px) {
            .info-section {
                padding: 25px;
            }

            .info-section h2 {
                font-size: 1.5em;
            }

            .actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</noscript>

<style>
    .calendar-page {
        padding: 20px;
        min-height: 100vh;
    }

    .page-header {
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .header-content h1 {
        color: #2e7d32;
        margin: 0;
        font-size: 2.5em;
        font-weight: 700;
    }

    .page-subtitle {
        color: #666;
        margin: 5px 0 0 0;
        font-size: 1.1em;
    }

    .page-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn-primary {
        background-color: #4caf50;
        color: white;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .material-icons {
        font-size: 20px;
    }

